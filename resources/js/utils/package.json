{
  "name": "@blazervel/blazervel",
  "contributors": [
    "Joshua Anderton <hey@joshuaanderton.ca>"
  ],
  "files": ["dist", "types"],
  "source": "src/index.js",
  "main": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "yarn run clean && yarn run build:cjs && yarn run build:umd",
    "build:cjs": "microbundle --format cjs",
    "build:umd": "microbundle --format umd --name Blazervel --external none",
    "clean": "rm -rf types && rm -rf dist",
    "prepublishOnly": "yarn run build",
    "watch": "microbundle watch --format cjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "microbundle": "^0.12.0",
    "typescript": "^4.2.4"
  }
}
